  <script>
    document.getElementById('addToCart').addEventListener('click', function () {
      var productId = '<%= product._id %>';
      console.log(productId, "srtyugad");
      var data = {
        productId: productId
      };
      const res = fetch('/cartpage', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            return showAlertpage()
          }else if(data.error){
          Swal.fire({
            icon:'error',
            title:'max quantity'
          })
          }
        })
        .catch(error => {
          console.error('Fetch error:', error);
        });
    });












    function showAlertpage() {
      Swal.fire({
        icon: "success",
        text: "Your product is added to the cart",
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Go to Cart',
        cancelButtonText: 'Go Back',
      }).then((result) => {
        if (result.isConfirmed) {
          // If "Go to Cart" is clicked, redirect to /cart
          window.location.href = '/getProduct';
        } else {
          // If "Go Back" is clicked, handle as needed
          console.log('User clicked Go Back');
        }
      });
    }

  </script>
