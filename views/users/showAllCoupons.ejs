<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>coupon</title>
    <link rel="canonical" href="https://getbootstrap.com/docs/4.3/examples/checkout/">

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="/static/checkout.css">
    <link rel="stylesheet" href="/static/coupon.css">
<link href="/docs/4.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">  
<!-- <link rel="stylesheet" href="/static/checkout.css"> -->
<link rel="stylesheet" href="/static/productpage.css">
</head>
<body>
  
  <%-include("../layout/navbarhome.ejs")-%>  
  
<!-- Add a container to hold the rows of cards -->

<div class="container mt-5">
    <div class="row">
      <% couponValue.forEach((value, i) => { %>
        <!-- Each card is inside a column (col-md-3) for a 4-column layout -->
        <div class="col-md-3 mb-4 mt-3 ">
          <div class="card text-center pb-3">
            <div class="d-flex flex-row text-center">
              <img src="https://i.imgur.com/bIgSEvT.png" width="60">
              <div class="d-flex flex-column ml-">
                <p style="color:black;background-color: cadetblue;border-radius: 10px;" class="mb-0 percent"><%= value.couponcode %></p>
                <span class="discount">Off<p><%=value.percentage%>%</p></span>
              </div>
            </div>
            <hr class="line">
            <span class="text-white">Ultimate discount</span>
            <span class="text-white">Price Range</span>
            <span style="color:black;background-color: cadetblue;border-radius: 3px;padding: 3px;" class="">₹<%=value.minamount%>-₹<%=value.maxamount%></span>
            <div class="d-flex justify-content-between align-items-center mt-3">
                <button  onclick="copyToClipboard('<%= value.couponcode %>')" class="couponbutton ">
                    <span class="text-white ">Copy</span>
                  </button>               
            </div>
          </div>
        </div>
      <% }) %>
  
    </div>
  </div>
  

  <%- include("../layout/navbarbottom.ejs")%> 

</body>
</html>

<script>
    function copyToClipboard(text) {
      // Create a temporary input element
      var tempInput = document.createElement("input");
      tempInput.value = text;
      document.body.appendChild(tempInput);
    
      // Select the text in the input element
      tempInput.select();
      tempInput.setSelectionRange(0, 99999); /* For mobile devices */
    
      // Copy the selected text
      document.execCommand("copy");
    
      // Remove the temporary input element
      document.body.removeChild(tempInput);
    
      // Optionally, you can provide user feedback (e.g., show a tooltip)
      Swal.fire({
  position: "top-end",
  icon: "success",
  title: "Coupon code copied",
  showConfirmButton: false,
//   timer: 1500,
footer: '<button style="background-color: #4CAF50; /* Green */ border: none; color: white; padding: 15px 32px; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; margin: 4px 2px; cursor: pointer;"><a href="/checkout" style="color: white; text-decoration: none;">Go back</a></button>'

});
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

