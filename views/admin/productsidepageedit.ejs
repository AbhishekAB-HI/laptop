                                <div class="form-outline">
                                    <% if(typeof message !=="undefined" ){ %>
                                        <h5 style="color:red;">
                                            <%= message %>
                                        </h5>
                                        <% } %>
                                </div>
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Product Name</label>
                                    <input type="text" name="productname" value="<%=product.productname%>"
