                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Product price</label>
                                            <div class="row gx-2">
                                                <input placeholder="$" value="<%=product.productprice%>"
                                                    name="productprice" min="0" type="text" class="form-control"
                                                    required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Product size</label>
                                            <input type="text" value="<%=product.productsize%>" name="productsize"
                                                min="0" class="form-control" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <input type="hidden" name="id" value="<%=product._id%>">
                                        <input type="hidden" name="cataid" value="<%=product.category._id%>">

