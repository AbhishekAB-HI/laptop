            <script>



                async function getOffer(productId) {
                    try {
                        const productID = productId;

                        const result = await Swal.fire({
                            title: "Enter your Discount Price",
                            input: 'number',
                            inputAttributes: {
                                min: 1,
                                max: 100,
                                step: 1
                            },
                            icon: "success",
                            showCancelButton: true,
                            confirmButtonText: "Apply",
                            cancelButtonText: "cancel",

                        }).then(async (result) => {
                            console.log(result.value);
                            const discount = result.value
                            const responce = await fetch("/admin/apply-offer", {
                                method: "post",
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({ productID, discount })
                            })

                            const res = await responce.json();

                            if (res.status == true) {
                                window.location.reload()
                            }

                        })

                    } catch (error) {
                        console.error(error);
                    }
                }

                async function cancelOffer(productId) {
                    try {
                        const productID = productId;
                        console.log(productID, "productID-----");
                        const res = await fetch("/admin/remove-Offer", {
                            method: "post",
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ productID })
                        })
                        const result = await res.json();
                        if (result.status == true) {
                            window.location.reload()
                        }

                    } catch (error) {
                        console.error(error);
                    }
                }





            </script>

