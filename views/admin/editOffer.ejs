<body>
    <div class="screen-overlay"></div>
    <%- include("../layout/Adminbar.ejs")%>
    <main class="main-wrap">
        <header class="main-header navbar">
            <div class="col-search">
             
            </div>
            <div class="col-nav">
                <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside"> <i class="material-icons md-apps"></i> </button>
                
            </div>
        </header>
        <section class="content-main">
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Edit-Offers</h2>
                       
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Basic</h4>
                        </div>
                        <div class="card-body">
                <form method="post" action="/admin/edit-offer"  >
                    <div class="form-outline">
                        <%
                        if(typeof message !=="undefined"){
                            %>
                         <h5 style="color:red;"><%= message %></h5>
                            <%
                          }
                       %>
                      </div>
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Name</label>
                                    <input type="text" value="<%=offers.offername%>" name="offername"  placeholder="Type here"  class="form-control"  required>
                                </div>
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Percentage</label>
                                    <input type="number"  value="<%=offers.percentage%>"  name="percentage"  placeholder="Type here"  class="form-control" required>
                                </div>
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Start-Date</label>
                                    <input type="date"  value="<%=offers.startdate%>"   name="startdate"   class="form-control" required>
                                </div>
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Expire-Date</label>
                                    <input type="date"   value="<%=offers.enddate%>"    name="enddate"   class="form-control"  required>
                                </div>
                                  <br>
                                  <input type="hidden" name="dataid" value="<%=offers._id%>" >
                                <input class="btn btn-primary btn-lg" type="submit" value="create Offer" />
                            
                           
                        </div>
                    </div> <!-- card end// -->
               
                 </div>
               
                       
                    </div> <!-- card end// -->
    


