          <%if(value.status!=="canceled"){%>
         
            
            <td><a href="/admin/orderstatus?id=<%=value._id %>&&orderid=<%=item._id%>">Cancel</a></td>
            <%}else{
              %>
              <td><p style="color: red;" >canceled</p></td>
