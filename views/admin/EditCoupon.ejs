<body>
    <div class="screen-overlay"></div>
    <%- include("../layout/Adminbar.ejs")%>
        <main class="main-wrap">
            <header class="main-header navbar">
                <div class="col-search">

                </div>
                <div class="col-nav">
                    <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside"> <i
                            class="material-icons md-apps"></i> </button>

                </div>
            </header>
            <section class="content-main">
                <div class="row">
                    <div class="col-9">
                        <div class="content-header">
                            <h2 class="content-title">Edit coupon</h2>

                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h4>Basic</h4>
                            </div>
                            <div class="card-body">
                                <form method="post" action="/admin/Edit-coupon">
                                    <div class="form-outline">
                                        <% if(typeof message !=="undefined" ){ %>
                                            <h5 style="color:red;">
                                                <%= message %>
                                            </h5>
                                            <% } %>
                                    </div>
                                    <div class="mb-4">
                                        <label for="product_name" class="form-label">Coupon code</label>
                                        <input type="text" name="couponcode" value="<%=coupons.couponcode%>"
                                            placeholder="Type here" class="form-control" id="product_name" required>
                                    </div>
                                    <div class="mb-4">
                                        <label for="product_name" class="form-label">Percentage</label>
                                        <input type="number" name="percentage" value="<%=coupons.percentage%>"
                                            placeholder="Type here" class="form-control" id="product_name" required>
                                    </div>
                                    <div class="mb-4">
                                        <label for="product_name" class="form-label">Expire-Date</label>
                                        <input type="date" name="date" value="<%=coupons.date%>" class="form-control"
                                            id="product_name" required>
                                    </div>
                                    <div class="mb-4">
                                        <label for="product_name" class="form-label">Usage Limit</label>
                                        <input type="text" name="usagelimit" value="<%=coupons.usagelimit%>"
                                            placeholder="Type here" class="form-control" id="product_name" required>
                                    </div>
                                    <input type="hidden"  name="id" value="<%=coupons._id%>">


                                    <div class="row">
                                        <div class="col-lg-4">
                                            <div class="mb-4">
                                                <label class="form-label">Min Purchase Amount</label>
                                                <div class="row gx-2">
                                                    <input placeholder="$" value="<%=coupons.minamount%>"
                                                        name="minamount" min="0" type="text" class="form-control"
                                                        required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="mb-4">
                                                <label class="form-label">Max Purchase Amount</label>
                                                <div class="row gx-2">
                                                    <input placeholder="$" value="<%=coupons.maxamount%>"
                                                        name="maxamount" min="0" type="text" class="form-control"
                                                        required>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-lg-4">

                                        </div>
                                    </div>
                                    <br>
                                    <input class="btn btn-primary btn-lg" type="submit" value="Submit" />


                            </div>
                        </div> <!-- card end// -->

                    </div>

                    <!-- <div class="card-body">
                            <div class="input-upload">
